<idea-plugin>
  <id>org.example.breakpoint-visualizer</id>
  <name>Breakpoint Visualizer</name>
  <vendor>Your Company Name</vendor>
  <description>Visualizes breakpoints in a dedicated tool window</description>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Breakpoint Visualizer"
                secondary="true"
                icon="AllIcons.Debugger.Db_set_breakpoint"
                anchor="right"
                factoryClass="org.example.pluginmodule.ui.BreakpointToolWindowFactory"/>
  </extensions>
</idea-plugin>